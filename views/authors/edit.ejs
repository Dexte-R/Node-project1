<h3>Edit Author</h3>
<form action="/authors/<%= author.id %>?_method=PUT" method="POST">
    <%- include('_form_fields') %> 
    <!-- anchor tag: link things vs buttons: interact with other objects -->
    <div class="form-row-end btn-row">
        <a class="btn btn-danger" href="/authors/<%= author.id %>">Cancel</a>
        <button class="btn btn-submit" type="submit">Update</button>
    </div>
</form>